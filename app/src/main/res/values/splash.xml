<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.AnimatedSplash" parent="android:Theme.Material.Light.NoActionBar"/>

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <!-- This will be used for pre-Android 12 devices -->
        <item name="android:windowBackground">@drawable/splash_sceen_background</item>
        <!-- This will be used for Android 12+ devices -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <item name="postSplashScreenTheme">@style/Theme.AnimatedSplash</item>
    </style>
</resources>